@model IEnumerable<UsersAlumini>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Students and Alumni from Sena</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>

<body>
    <div class="container-fluid">
        <h1>Students and Alumni <a asp-action="Create" class="btn btn-sm btn-secondary">Create</a></h1>
        <table class="table table-bordered table-sm table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Doc Number</th>
                    <th>Category Doc</th>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Category</th>
                    <th>Program</th>
                    <th>Enrollment Date</th>
                    <th>Address</th>
                    <th>Neighborhood</th>
                    <th>City</th>
                    <th>Province</th>
                    <th>Date Added On</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null)
                {
                    <tr><td colspan="6" class="text-center">No Model Data</td></tr>
                }
                else
                {
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.Usr_id</td>
                            <td>@p.Usr_doc</td>
                            <td>@p.Usr_kind_doc</td>
                            <td>@p.Usr_name</td>
                            <td>@p.Usr_phonenum</td>
                            <td>@p.Usr_email</td>
                            <td>@p.Usr_gender</td>
                            <td>@p.Usr_category</td>
                            <td>@p.Usr_program</td>
                            <td>@string.Format("{0:dddd, dd MMMM yyyy}", p.Usr_startdate)</td>
                            <td>@p.Usr_address</td>
                            <td>@p.Usr_neighborhood</td>
                            <td>@p.Usr_city</td>
                            <td>@p.Usr_province</td>
                            <td>@string.Format("{0:dddd, dd MMMM yyyy}", p.Usr_dateregistr)</td>
                            <td><a asp-action="Update" asp-route-id="@p.Usr_id">Update</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</body>
</html>
